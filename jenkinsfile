pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  environment {
    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t abhishekps/alpine_docker .'
      }
    }
    stage('Login') {
      steps {
        sh 'echo dckr_pat_LaTnXbDgu_OvnQ8IkXkI7fOujaA | docker login -u abhishekps --password-stdin'
      }
    }
    stage('Push') {
      steps {
        sh 'docker push abhishekps/alpine_docker'
      }
    }
  }
  post {
    always {
      sh 'docker logout'
    }
  }
}
